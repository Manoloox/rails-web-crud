<!--<h1>Listing Articles</h1>-->
<%= link_to 'New article', new_article_path, class:"btn btn-primary"%>
<%= link_to 'Export to PDF', articles_path(format: :pdf), class:"btn btn-warning" %>
<table>
  <tr>
    <th class="center">Title</th>
    <th class="center">Text</th>
    <th colspan="3"></th>
  </tr>

  <% @articles && @articles.each do |article| %>
    <tr>
      <td><p class="normal"><%= article.title %></p></td>
      <td><p class="normal"><%= article.text %></p></td>
      <td class= "px-1"><%= link_to 'Show', article_path(article), class:"btn btn-primary" %></td>
      <td class= "px-1"><%= link_to 'Edit', edit_article_path(article), class:"btn btn-success" %></td>
      <td class= "px-1"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
    </tr>
  <% end %>
</table>

